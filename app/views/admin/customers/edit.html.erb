<div class="container mt-5 mb-5">
  <%= render "error", customer: @customer %>
  <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
  <div class="row">
    <h3 class="mb-4"><strong>会員情報編集</strong></h3>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th style="width:20%">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th style="width:20%">氏名</th>
          <td>
            （姓）<%= f.text_field :last_name %>
            （名）<%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <th style="width:20%">フリガナ</th>
          <td>
            （セイ）<%= f.text_field :last_name_kana %>
            （メイ）<%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <th style="width:20%">郵便番号</th>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th style="width:20%">住所</th>
          <td><%= f.text_area :residence, size: "45x2" %></td>
        </tr>
        <tr>
          <th style="width:20%">電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th style="width:20%">メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th style="width:20%">会員ステータス</th>
          <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
          <td>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効' %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会' %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
    <%= f.submit '変更を保存', class: "btn btn-success" %>
  <% end %>
</div>