<div class="container mt-5">
  <div class="row">
    <h4>会員情報編集</h4>
    <table class="table">
      <%= form_with model:@customerurl, local: true do |f| %>
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.last_name %><%= f.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.last_name_kana %><%= f.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.residence %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <%= form_with(model:@customer, local: true) do |f| %>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
          </td>
          <td>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
          </td>
          <% end %>
        </tr>
      </tbody>
      <%= f.submit '変更を保存' %>
      <% end %>
    </table>