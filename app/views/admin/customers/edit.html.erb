<div class="container mt-5 mb-5">
  <div class="row">
    <h4>会員情報編集</h4>
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <%= form_with url:admin_customer_path do |f| %>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :residence %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <%= form_with url:admin_customer_path do |f| %>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <%= f.submit '変更を保存' %>
    <% end %>