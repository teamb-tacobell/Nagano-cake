<div class="container mt-5 mb-5">
  <div class="text-center"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class="row">
    <h4 class="mb-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.residence %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td><strong><p class="text-success">有効</p></strong></td>
          <% elsif %>
            <td><strong><p class="text-secondary">退会</p></strong></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <div class="d-grid gap-2 d-md-block">
      <%= link_to edit_admin_customer_path(@customer.id), class: 'text-light' do %>
        <button class="btn btn-success" type="submit">編集する</button>
      <% end %>
      <%= link_to orders_path, class: 'text-light' do %>
        <button class="btn btn-primary" type="submit">注文履歴一覧を見る</button>
      <% end %>
    </div>
  </div>
</div>