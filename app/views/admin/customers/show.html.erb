<div class="container mt-5">
  <div class="row">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.residence %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td><p>有効</p></td>
          <% elsif %>
            <td><p>退会</p></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <%= link_to '編集する', edit_admin_customer_path(@customer.id) %>
  </div>
</div>