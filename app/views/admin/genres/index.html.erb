<div class="container">
  <h2>ジャンル一覧・追加</h2>

  <%= render 'error',obj: @genre %>

  <%= flash[:notice] %>

  <%= form_with model: @genre,url:admin_genres_path,method: :post,class:"genre_form" do |f| %>
    <span>ジャンル名</span>
    <%= f.text_field:name,placeholder:"ジャンル名" %>
    <%= f.submit "新規登録",class:"btn btn-success" %>
  <% end %>

  <div class="row">
    <table class="table col-5">
      <thead>
        <tr class="table-active">
          <th></th>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td colspan="3"></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>