<div class="container my-5">
  <h3><strong>ジャンル一覧・追加</strong></h3>

  <%= render 'error',obj: @genre %>

  <%= flash[:notice] %>
  <div class="row mt-4 mb-2">
    <%= form_with model: @genre,url:admin_genres_path,method: :post,class:"genre_form" do |f| %>
    <table>
      <tbody>
        <tr>
          <td>ジャンル名</td>
          <td></td>
          <td>
            <%= f.text_field:name,placeholder:"ジャンル名" %>
          </td>
          <td>
            <%= f.submit "新規登録",class:"btn btn-success" %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>

  <div class="row">
    <table class="table col-5">
      <thead>
        <tr class="table-active">
          <th></th>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td colspan="3"></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>