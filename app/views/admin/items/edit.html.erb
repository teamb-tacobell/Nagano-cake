<h1>商品編集</h1>

<%= form_with model: @item,url: admin_item_path(@item.id) do |f| %>

<h4>商品画像</h4>
 　<%= f.file_field :image, accept: "image/*" %>
 <h4>商品名</h4>
 　<%= f.text_field :name %>
 <h4>説明</h4>
   <%= f.text_area :explanation %>
 <h4>ジャンル</h4>
   <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--" %>

 <h4>税抜価格</h4>
   <%= f.text_field :tax_excluded_price %>円

 <h4>販売ステータス</h4>
   <%= f.radio_button :is_sold, true %>
    <%= f.label :is_sold, '販売中' %>
   <%= f.radio_button :is_sold, false %>
    <%= f.label :is_sold, '販売停止中' %>

 <%= f.submit '変更を保存' %>

<% end %>