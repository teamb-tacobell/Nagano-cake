<div class="container my-5" >
  <div class="row">
    <div class="col-3 mb-3 offset-1">
      <h3>商品一覧</h3>
    </div>
    <div class="col-7 mb-3 text-right">
      <%= link_to new_admin_item_path, class: "text-decoration-none h2" do %>
    　  <i class="fas fa-plus-circle fa-lg" style="color: #d0d1d2;"></i>
    　<% end %>
    </div>

    <div class="container mb-5">
      <div class="row">
        <div class="col-10 mx-auto">
        <table class="table table-hover text-center">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
                <% end %>
              </td>
              <td><%= item.tax_excluded_price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
                <% if item.is_sold == false %>
                  <td><strong><p class="text-secondary">販売停止中</p><strong></td>
                <% else %>
                  <td><strong><p class="text-success">販売中</p></strong></td>
                <% end %>
            </tr>
          </tbody>
          <% end %>
         </table>
         <div class="pagination justify-content-center mt-3">
           <%= paginate @items %>
         </div>
        </div>
    　</div>
    </div>
　</div>
</div>