<div class='container mt-5 md-5'>
  <div class='row'>
   <div class="col-md-6 px-5 px-sm-0 mx-auto">
       <h4>商品新規登録</h4>
      <%= render 'admin/genres/error',obj: @item %>
      <%= form_with model: @item,url: admin_items_path, local: true  do |f| %>
        <div class='form-group'>
           <%= f.label '商品画像' %>
 　         <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class='form-group'>
　　　　  <%= f.label '商品名' %>
 　        <%= f.text_field :name, class: 'form-control', :placeholder => '商品名' %>
        </div>
        <div class='form-group'>
　　　　  <%= f.label '商品説明' %>
          <%= f.text_area :explanation, class: 'form-control',rows:"8", :placeholder => 'ここに説明文を記述します' %>
        </div>
        <div class='form-select'>
          <%= f.label 'ジャンル' %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--" %>
        </div>
        <div class='form-group'>
　　　　  <%= f.label '税抜価格' %>
          <%= f.text_field :tax_excluded_price, class: 'form-control' %>円
        </div>
        <div class='form-check'>
　　　　  <%= f.label '販売ステータス' %>
          <%= f.radio_button :is_sold, true %>
            <%= f.label :is_sold, '販売中' %>
          <%= f.radio_button :is_sold, false %>
            <%= f.label :is_sold, '販売停止中' %>
        </div>
　　　　 <div class='form-group'>
        <%= f.submit "新規登録", class:'btn btn-lg btn-success' %>
　　　　</div>
      <% end %>
   </div>
  </div>
</div>