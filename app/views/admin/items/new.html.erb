<div class='container'>
  <div class='row'>
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>商品新規登録</h2>
      <%= form_with model: [:admin, @item], local: true do |f| %>
        <div class='form-group'>
          <%= f.label '商品画像' %>
 　        <%= f.file_field :image, accept: "image/*" %>
        </div>
　　　　<div class='form-group'>
　　　　  <%= f.label '商品名' %>
 　        <%= f.text_field :name, class: 'form-control', :placeholder => '商品名' %>
　　　　</div>
        <div class='form-group'>
　　　　  <%= f.label '商品説明' %>
          <%= f.text_area :explanation, class: 'form-control', :placeholder => 'ここに説明文を記述します' %>
        </div>
        <div class='form-group'>
          <%= f.label 'ジャンル' %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--" %>
        </div>
        <div class='form-group'>
　　　　  <%= f.label '税抜価格' %>
          <%= f.text_field :tax_excluded_price, class: 'form-control' %>円
        </div>
        <div class='form-group'>
　　　　  <%= f.label '販売ステータス' %>
          <%= f.radio_button :is_sold, true %>
            <%= f.label :is_sold, '販売中' %>
          <%= f.radio_button :is_sold, false %>
            <%= f.label :is_sold, '販売停止中' %>
        </div>
　　　　 <div class='form-group'>
        <%= f.submit "新規登録", class:'btn btn-lg btn-success' %>
　　　　</div>
      <% end %>
   </div>
  </div>
</div>