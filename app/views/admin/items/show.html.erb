<%= notice %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h3>商品詳細</h3>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="mx-5">
        <%= image_tag @item.image,size: "350x250" %>
      </div>

    </div>
    <div class="col-md-7" style="text-left">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th style="width: 30%">商品名</th>
            <td style="width: 70%"><%= @item.name %></td>
          </tr>
          <tr>
            <th style="width: 30%">商品説明 </th>
            <th style="width: 70%"><%= @item.explanation %></td>
          </tr>
          <tr>
            <th style="width: 30%">ジャンル</th>
            <td style="width: 70%"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th style="width: 30%"> 税込価格<br>(税抜価格)</th>
            <td style="width: 60%"><br><%= @item.add_tax_tax_excluded_price.to_s(:delimited) %>（<%= @item.tax_excluded_price.to_s(:delimited) %>）円</td>
          </tr>
          <tr>
            <th style="width: 30%">販売ステータス</th>
            <td style="width: 70%">
              <% if @item.is_sold == false %>
                <strong class="text-secondary">販売停止中</strong>
               <% else %>
                <strong class="text-success">販売中</strong>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="my-5 ml-5">
        <%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn-lg btn-success" %>
      </div>
    </div>
  </div>
</div>