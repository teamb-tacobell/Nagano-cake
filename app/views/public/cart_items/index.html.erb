<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2>
    <%= link_to "カートを空にする",cart_items_delete_all_path,method: :delete,class:"btn btn-danger" %>
  </div>

  <div class="row">
    <%= @cart_item.each do |cart_item| %>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <%= link_to "削除する",cart_items_delete_path(cart_item.id),method: :delete,class:"btn btn-danger" %>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>