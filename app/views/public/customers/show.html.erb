<div class="container mt-5 mb-5">
  <div class="text-center"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class="row">
    <h4 class="mb-4">登録情報</h4>
    <div class="ml-3">
    <%= link_to edit_customer_path, class: 'text-light' do %>
        <button class="btn btn-success" type="submit">編集する</button>
    <% end %>
    </div>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="table-secondary">氏名</th>
          <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">カナ</th>
          <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <td><%= current_customer.postcode %></td>
        </tr>
        <tr>
          <th class="table-secondary">住所</th>
          <td><%= current_customer.residence %></td>
        </tr>
        <tr>
          <th class="table-secondary">電話番号</th>
          <td><%= current_customer.phone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary">メールアドレス</th>
          <td><%= current_customer.email %></td>
        </tr>
      </tbody>
    </table>
    <table class="table-borderless">
      <tbody>
        <tr>
          <th>
            <h4>配送先</h4>
          </th>
          <td>
              <%= link_to deliveries_path, class: 'ml-3' do %>
                  <button class="btn btn-primary" type="submit">一覧を見る</button>
              <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <h4>注文履歴</h4>
          </th>
          <td>
              <%= link_to orders_path, class: 'ml-3' do %>
                  <button class="btn btn-primary" type="submit">一覧を見る</button>
              <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>