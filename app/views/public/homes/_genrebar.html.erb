<table class="table text-center table-hover">
  <thead class="thead-light">
    <tr>
      <th class="h4 font-weight-bold">ジャンル一覧</th>
    </tr>
  </thead>
  <% genre.each do |genre| %>
  <tr>
    <td class="font-size table-light">
      <%= link_to admin_genre_path(genre.id), method: :get do %>
      <%= genre.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>