<div class="container my-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/homes/genrebar', genre: @genre %>
    </div>

    <div class="col-md-9">
      <div class="d-flex">
        <h3><strong>商品一覧</strong></h3><h4 class="mt-1">(全<%= @items_all.count %>件)</h4>
      </div>

      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="col-3 mt-3">
             <%= link_to item_path(item) do %>
               <%= image_tag item.image, size: '180x140' %>
             <% end %>
             <div class="item mt-2"><%= item.name %></div>
             <div class="item">¥<%= item.add_tax_tax_excluded_price.to_s(:delimited) %>(税込)</div>
          </div>
        <% end %>
      </div>
      <div class="pagination justify-content-center mt-5">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>