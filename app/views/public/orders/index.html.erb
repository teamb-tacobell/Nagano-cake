<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 col-sm-12 mx-auto">
      <div class="row mb-3">
        <div class="col-12">
          <h4 class="text-center">　注文履歴一覧　</h4>
        </div>
      </div>
　　　<div class="row">
      <table class ="table table-bordered">
        <thead>
          <tr class="text-center">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="text-center align-middle"><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td>
              〒<%= order.postcode %></br>
              <%= order.residence %></br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
                <%= order_item.item_id.name %>
              <% end %>
            </td>
            <td><%= order.total_price %></td>
            <td class="text-center align-middle"><%= order.order_status %></td>
            <td class="text-center align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>