<div class="container">
  <h1>注文履歴一覧</h1>
  <table class ="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <td><%= order.created_at %></td>
      <td>
        <%= order.postcode %></br>
        <%= order.residence %></br>
        <%= order.name %>
      </td>
      <td><%= order_item.item_id.name %></td>
      <td><%= order.total_price %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to "表示する", order_path(@order.id), class: "btn btn-sm btn-primary" %></td>
      <% end %>
    </tbody>
  </table>
</div>