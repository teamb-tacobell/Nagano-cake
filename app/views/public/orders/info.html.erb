<div class="container">
  <% if current_customer.cart_items.present? %>
  <h2 class="text-center">注文情報確認</h2>
  <%= form_with model: @order, url: orders_path do |f| %>
    <table class ="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <tr>
        <% @cart_items.each do |cart_item| %>
          <td>
            <%= image_tag cart_item.item.image, size: '40x40' %>
            <%= cart_item.item.name %>
          </td>

          <td>
            <% tax_cluded_price = cart_item.item.add_tax_tax_excluded_price %>
            <%= tax_cluded_price.to_s(:delimited) %>
          </td>

          <td>
            <%= cart_item.quantity %>
          </td>

          <td>
            <%= cart_item.item.add_tax_tax_excluded_price.floor * cart_item.quantity %>
          </td>
          <% @total_item_price += cart_item.item.add_tax_tax_excluded_price.floor * cart_item.quantity %>
        <% end %>
        </tr>
      </tbody>
    </table>

    <table class="table table-bordered">
      <tr>
        <th>送料</th>
        <td>
          <%= @order.postage %>
          <%= f.hidden_field :postage, :value => @order.postage %>
        </td>

        <th>商品合計</th>
        <td>
          <%= @total_item_price.to_s(:delimited) %>
        </td>

        <th>請求金額</th>
        <td>
          <%= (@total_item_price + @order.postage).to_s(:delimited) %>
          <%= f.hidden_field :total_price, :value => @total_item_price + @order.postage %>
        </td>
      </tr>
    </table>

    <div class="row">
      <h4>支払方法</h4>
      <%= @order.cash_i18n %>
      <%= f.hidden_field :cash, :value => @order.cash %>
    </div>
    <div class="row">
      <h4>お届け先</h4>
      〒<%= @order.postcode + ' ' + @order.residence %></br>
        <%= f.hidden_field :postcode, :value => @order.postcode %>
        <%= f.hidden_field :residence, :value => @order.residence %>

        <%= @order.name %>
        <%= f.hidden_field :name, :value => @order.name %>
    </div>
    <%= f.submit "注文を確定する", class: "btn btn-primary" %>
  <% end %>
  <% else %>
    <p></p></br>
    <h2 class="text-center">現在カートに商品はありません。</h2>
    <p></p></br>
  <% end %>
</div>