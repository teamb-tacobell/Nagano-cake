<div class="container my-5">
  <div class="row">
    <div class="col-lg-11 col-sm-12 mx-auto">
      <div class="row mb-4">
        <div class="col-7">
          <span class="h3">注文履歴詳細</span>
        </div>
      </div>
      <div class="row">
          <p class="h5 col-7">注文情報</p>
          <span class="h5 col-3 offset-1">請求情報</span>
      </div>
      <div class="row mt-2">
        <table class="table table-bordered col-7">
          <tbody>
              <tr>
                  <th scope="row" class='bg-light col-lg-4 align-middle'>注文日</th>
                  <td class='col-lg-8 py-2'><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              </tr>
              <tr>
                  <th scope="row" class='bg-light col-lg-4 align-middle'>配送先</th>
                  <td class='col-lg-9 py-2'>
                    〒<%= @order.postcode %><br>
                    <%= @order.residence %><br>
                    <%= @order.name %>
                  </td>
              </tr>
              <tr>
                  <th scope="row" class='bg-light col-lg-4 align-middle'>支払方法</th>
                  <td class='col-lg-8 py-2'><%= Order.cashes_i18n[@order.cash] %></td>
              </tr>
              <tr>
                  <th scope="row" class='bg-light col-lg-4 align-middle'>ステータス</th>
                  <td class='col-lg-8 py-2'><%= @order.order_status_i18n %></td>
              </tr>
          </tbody>
        </table>

        <table class="table table-bordered col-3 offset-1 align-self-start">
          <tbody>
              <tr>
                  <th scope="row" class='bg-light col-lg-5 align-middle'>商品合計</th>
                  <td class="text-right col-lg-8 py-2"><%= (@order.total_price - @order.postage).to_s(:delimited) %>円</td>
              </tr>
              <tr>
                  <th scope="row" class='bg-light col-lg-4 align-middle'>配送料</th>
                  <td class="text-right col-lg-8 py-2"><%= @order.postage %>円</td>
              </tr>
              <tr>
                  <th scope="row" class='bg-light col-lg-4 align-middle'>請求金額</th>
                  <td class="text-right col-lg-8 py-2"><%= @order.total_price.to_s(:delimited) %>円</td>
              </tr>
          </tbody>
        </table>
      </div>

      <div class="row mt-4">
        <span class="h5 col-7">注文内容</span>
      </div>
      <div class="row mt-3">
        <table class="table table-bordered col-9">
          <thead class="bg-light text-center">
            <th class="col-6">商品</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-1">個数</th>
            <th class="col-2">小計</th>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
              <tr>
                <td>
                  <%= order_item.item.name %>
                </td>
                <td class="text-right">
                  <%= order_item.purchase_price.to_s(:delimited) %>円
                </td>
                <td class="text-right">
                  <%= order_item.quantity %>
                </td>
                <td class="text-right">
                  <%= (order_item.purchase_price * order_item.quantity).to_s(:delimited) %>円
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>