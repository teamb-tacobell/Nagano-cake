<div class="container">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      名前
      <%= f.label :（姓） %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.label :（名） %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      フリガナ
      <%= f.label :（セイ） %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.label :（メイ） %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %>
      <%= f.number_field :postcode, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :residence, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %>
      <%= f.number_field :phone_number, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %>文字以上)
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :確認用パスワード %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  <p></p>
  登録済みの方</br>
  <%= render "public/shared/links" %>からログインしてください。
</div>