<div class="container">
  <div class="row d-flex justify-content-center m-5">
    <div class="col-7">
      <div class="border border-secondary-subtle">
        <div class="bg-info p-2 text-light text-center">
          <h4>会員ログイン</h4>
        </div>
        <div class="m-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="d-flex justify-content-start mb-3">
              <%= f.label :メールアドレス, class: "w-25" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50", placeholder: 'sample@example.com' %>
            </div>
        
            <div class="d-flex justify-content-start mb-3">
              <%= f.label :パスワード, class: "w-25" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "w-50" %>
            </div>
        
            <div class="actions text-center mb-4">
              <%= f.submit "ログイン", class: "btn btn-success" %>
            </div>
          <% end %>
          
          <strong>
          会員登録がお済みでない方
          </strong><br>
          <div>
          <%= render "public/shared/links" %>から新規登録をしてください。
          </div>
         </div>
      </div>
    </div>
  </div>
</div>